# include <stdio.h>
void main()
{
    int d=3;
   for(int i=1; i<=5; i++)
 {
   for(int j=5; j>=i; j--)
  {

       printf("  ");
  }
   for(int k=1; k<=i-1; k++)
  {
   printf("*");
  }
  for(int l=i-2; l>=1; l--)
  {
   printf("*");
  }
   printf("\n");
 }
 for(int a=1; a<=3; a++)
 {
   for(int b=0; b<=a; b++)
  {

       printf("  ");
  }
   for(int c=1; c<=d; c++)
  {
   printf("*");
  }
  for(int e=d-1; e>=1; e--)
  {
      printf("*");
  }
  d--;
  printf("\n");
 }
}
