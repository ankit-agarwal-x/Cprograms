#include<stdio.h>
void main()
{
    int i,j,row;
    printf("Enter number of rows: ");
    scanf("%d",&row);
    for(i=1;i<=row;i++)
    {
        for(j=1;j<=row-i;j++)
        {
            printf(" \t ");
        }
        for(j=1;j<=i;j++)
        {
            printf("%d \t", j);
        }
        for(j=i-1;j>=1;j--)
        {
            printf("%d \t", j);
        }
        printf("\n");
    }
}
