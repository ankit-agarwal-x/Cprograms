#include <stdio.h>
long factorial(int n) {
   //base case
   if(n == 0) {
      return 1;
   } else {
      return n * factorial(n-1);
   }
}

int main()
{
   int n = 5;
   int i;

   printf("Enter the number of terms \t");
   scanf("%d",&n);
   printf("Factorial of %d: %d \n" , n , factorial(n));
}
