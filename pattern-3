include<stdio.h>
void main()
{
    int n;
    printf("Enter the number of rows");
    scanf("%d",&n);
    int k;
    int r=n;
    for (int i = 1; i <= r; i++)
    {

    for (int s = 1; s <= r - i; s++)
      {
         printf("  ");
      }
      for (k=0; k != 2 * i - 1; k++)
      {
         if(k%2==0)
         {
             printf("1 ");
         }
         else
         {
             printf("0 ");
         }


      }
      printf("\n");
    }
}
